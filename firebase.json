{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api",
        "function": "api"
      },
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "function": "dynamicIndex"
      }
    ],
    "headers": [{
      "source": "**/*",
      "headers": [
        {"key": "Content-Security-Policy", "value": "script-src 'self' cdn.coil.com www.google-analytics.com ajax.googleapis.com maps.googleapis.com youtube.com s.ytimg.com;"},
        {"key": "X-Frame-Options", "value": "DENY"},
        {"key": "X-XSS-Protection", "value": "1; mode=block"}
      ]
    }]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
